# Agent Configuration Template
# Copy this to .env in your agent deployment

# Application Mode
LOGTRAIL_MODE=agent

# Server Configuration
NODE_ENV=production
PORT=3001

# Agent Identity
AGENT_ID=agent-001
AGENT_NAME=Production Web Server
AGENT_DESCRIPTION=Main web application server

# Central Server Connection
CENTRAL_SERVER_URL=wss://your-central-server.com
AGENT_API_KEY=your-unique-agent-api-key-here

# WebSocket Configuration
WS_RECONNECT_INTERVAL=5000
WS_PING_INTERVAL=30000

# Security
# No cookie secret needed for agents

# Logging
LOG_LEVEL=info

# Features
ENABLE_LOCAL_LOGS=true
ENABLE_LOG_STREAMING=true

# Performance
MAX_LOG_LINES=1000
LOG_TAIL_LINES=100

# Health Check
HEALTH_CHECK_INTERVAL=60000

# Optional: System Info
SYSTEM_TYPE=web-server
ENVIRONMENT=production
DATACENTER=us-east-1
