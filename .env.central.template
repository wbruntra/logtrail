# Central Server Configuration Template
# Copy this to .env in your central server deployment

# Application Mode
LOGTRAIL_MODE=central

# Server Configuration
NODE_ENV=production
PORT=3000

# Security
COOKIE_SECRET=your-secure-cookie-secret-here-change-this

# Central Server Specific
CENTRAL_SERVER_URL=wss://your-central-server.com

# WebSocket Configuration
WS_PORT=3000
WS_PATH=/ws

# Database (if you add one later)
# DATABASE_URL=your-database-url

# Logging
LOG_LEVEL=info

# Features
ENABLE_AGENT_CONNECTIONS=true
ENABLE_LOCAL_LOGS=true

# Agent Management
AGENT_CONNECTION_TIMEOUT=30000
AGENT_HEARTBEAT_INTERVAL=10000

# Optional: Authentication provider
# AUTH_PROVIDER=local
# LDAP_URL=ldap://your-ldap-server
# LDAP_BASE_DN=dc=company,dc=com
